{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
