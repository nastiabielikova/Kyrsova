{
  "name": "apteka-system",
  "version": "1.0.0",
  "description": "Система управління аптекою з React та Node.js",
  "main": "server/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server/server.js",
    "server": "cd server && node server.js",
    "server:dev": "cd server && npm run dev",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "build": "npm install && npm --prefix client install --include=dev && cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install --include=dev"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "multer": "^2.0.2"
  },
  "keywords": [
    "аптека",
    "pharmacy",
    "react",
    "node",
    "firebase"
  ],
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
